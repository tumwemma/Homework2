<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/bg">
    <Space
            android:layout_width="match_parent"
            android:layout_height="20sp">

    </Space>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dd_logo"
            android:background="@color/bg">

    </ImageButton>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dicide Food"
            android:id="@+id/tvfoodDisplay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:layout_marginTop="30sp"
            android:textColor="@color/colorPrimary"
    />
    <EditText
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:hint="add new food"
            android:id="@+id/foodchose"
            android:layout_marginTop="50sp"
            android:textColor="@color/txt"/>
    <Button
            android:text="Add Food"
            android:layout_width="200sp"
            android:layout_height="30sp"
            android:onClick="addFood"
            android:background="@color/colorPrimary"
            android:textColor="@color/bg"
    />
    <Space
            android:layout_width="match_parent"
            android:layout_height="80sp">

    </Space>


    <Button
            android:text="Decide !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="decide"
            android:background="@color/colorPrimary"
            android:textColor="@color/bg"

    />


</LinearLayout>